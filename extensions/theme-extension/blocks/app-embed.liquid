{% if block.settings.enabled %}
  <script>
    window.cameroConfig = {
      apiKey: "{{ shop.metafields.camero.api_key | default: block.settings.api_key }}"
    };
    console.log("Camero Debug:", {
      metafield: "{{ shop.metafields.camero.api_key }}",
      setting: "{{ block.settings.api_key }}",
      final: window.cameroConfig.apiKey
    });
  </script>

  <script
    src="https://camero.myabmedia.com/widget.js"
    async
  ></script>
{% endif %}


{% schema %}
{
  "name": "Camero AI Chat Widget",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable Camero AI Widget",
      "default": true
    },
{
  "type": "text",
  "id": "api_key",
  "label": "Camero API Key",
  "default": "ENTER_API_KEY"
}
  ]
}
{% endschema %}
